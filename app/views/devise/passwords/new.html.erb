<div class="container">
  <div class="card card-container">
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class: "form-signin"} ) do |f| %>
    	<%= render "devise/shared/error_messages", resource: resource %>

      <span id="reauth-email" class="reauth-email"></span>
      <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		  </div>
		  <div class="actions">
		    <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block btn-signin"%>
		  </div>
		<% end %>
    <%= render "devise/shared/links" %>
  </div><!-- /card-container -->
</div><!-- /container -->